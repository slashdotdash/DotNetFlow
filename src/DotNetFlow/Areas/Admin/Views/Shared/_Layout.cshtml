@using Combres.Mvc

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Html.CombresLink("adminCss")    
</head>
<body>
    <div class="page container">
        <header>
            <div id="title" class="page-header">
                <h1>Administration</h1>
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>

        <div id="flash-messages" class="alert-message" style="display:none;">
            <a class="close" href="#">&times;</a>
            <p></p>
        </div>

        <section id="main">
            @RenderBody()
        </section>
    </div>
    <footer></footer>

    @Html.CombresLink("adminJs")
    @Html.Partial("_Flash")
</body>
</html>